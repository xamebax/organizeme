<%= @task.tags.build %>
<%= form_for(@task) do |task_form| %>
  <% if @task.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@task.errors.count, "error") %> prohibited this task from being saved:</h2>
      <ul>
      <% @task.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

	<table class="table_edit">
		<tr><td><div class="field">
					<b><%= task_form.label :title %></b></td>
			<td><%= task_form.text_field :title %>
			</div></td></tr>
		<tr><td><div class="field">
					<b><%= task_form.label :details %></b></td>
			<td><%= task_form.text_area :details %>
			</div></td></tr>
		<tr><td><div class="field">
					<b><%= task_form.label :priority %></b> (between 1 and 5)</td>
				<td><%= task_form.text_field :priority %>
				</div></td></tr>
		<tr><td><div class="field">
				<b><%= task_form.label :progress %></b> (in %)</td>
		    <td><%= task_form.text_field :progress %>
				</div></td></tr>
				<tr><td>Tags:</td><td><%= render :partial => 'tags/form',
					:locals => {:form => task_form} %></td></tr>
	<tr><td colspan=2><div class="actions">
				<%= task_form.submit %>
</div></td></tr></table>
<% end %>

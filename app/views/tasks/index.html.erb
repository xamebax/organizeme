<table class="main_table">
	<tr>
		<th><%= sortable "priority" %></th>
    <th><%= sortable "title" %></th>
		<th><%= sortable "details" %></th>
		<th><%= sortable "progress" %></th>
		<th>Tags</th>
    <th>Options</th>
  </tr>

<% @tasks.each do |task| %>
	<tr>
		<td class = "priority"><%= task.priority %></td>
    <td class = "title"><%= task.title %></td>
		<td class = "details"><%= task.details %></td>
		<td class = "progress"><%= task.progress %>%</td>
		<td class = "tags"><%= task.tags.map { |t| t.name }.join(", ")  %></td>
		<td class = "options"><%# link_to 'Show', task %> 
			<%= link_to 'Edit', edit_task_path(task) %><br />
    <%= link_to 'Destroy', task, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

<table class="actions">
	<tr><td><%= link_to 'New Task', new_task_path %></td>
	<td>Edit tags</td>
	<td>Clear finished tasks</td>
	<td>Mark all finished</td>
	<td><%= link_to 'ROAR!', root_path %></td>
	</tr>
</table>
